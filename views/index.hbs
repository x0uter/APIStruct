<div class="logo">
    <img src="/images/logo.png">
</div>

<div class="container">
    <div class="row">
        <section class="content" style="padding-top: 40px;">
            <div class="col-md-8 col-md-offset-2">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <div class="pull-right">
                            <div class="btn-group">
                                <button type="button" class="btn btn-success btn-filter" data-target="GET">GET</button>
                                <button type="button" class="btn btn-info btn-filter" data-target="POST">POST</button>
                                <button type="button" class="btn btn-warning btn-filter" data-target="PUT">PUT</button>
                                <button type="button" class="btn btn-danger btn-filter" data-target="DELETE">DELETE</button>
                                <button type="button" class="btn btn-default btn-filter" data-target="all">ALL</button>
                            </div>
                        </div>
                        <div class="table-container">
                            <table class="table table-filter">
                                <tbody>
                                    <!-- /api endpoint -->
                                    {{#each getRoutes}}
                                    <!-- api endpoint -->
                                    <tr data-status="{{method}}">
                                        <td>
                                            <div class="media">
                                                <div class="media-body">
                                                    <span class="media-meta pull-right">
                                                        <button type="button" class="btn btn-danger btn-sm">x</button>
                                                    </span>
                                                    <h4 class="title">
                                                        api/{{path}}
                                                        <span class="pull-right {{method}}">{{method}}</span>
                                                    </h4>
                                                    <p style="margin-bottom: 0px;">{{description}}</p>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                    <!-- /api endpoint -->
                                    {{/each}}
                                    {{#each postRoutes}}
                                    <!-- api endpoint -->
                                    <tr data-status="{{method}}">
                                        <td>
                                            <div class="media">
                                                <div class="media-body">
                                                    <span class="media-meta pull-right">
                                                        <button type="button" class="btn btn-danger btn-sm">x</button>
                                                    </span>
                                                    <h4 class="title">
                                                        api/{{path}}
                                                        <span class="pull-right {{method}}">{{method}}</span>
                                                    </h4>
                                                    <p style="margin-bottom: 0px;">{{description}}</p>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                    <!-- /api endpoint -->
                                    {{/each}}
                                    {{#each putRoutes}}
                                    <!-- api endpoint -->
                                    <tr data-status="{{method}}">
                                        <td>
                                            <div class="media">
                                                <div class="media-body">
                                                    <span class="media-meta pull-right">
                                                        <button type="button" class="btn btn-danger btn-sm">x</button>
                                                    </span>
                                                    <h4 class="title">
                                                        api/{{path}}
                                                        <span class="pull-right {{method}}">{{method}}</span>
                                                    </h4>
                                                    <p style="margin-bottom: 0px;">{{description}}</p>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                    <!-- /api endpoint -->
                                    {{/each}}
                                    {{#each deleteRoutes}}
                                    <!-- api endpoint -->
                                    <tr data-status="{{method}}">
                                        <td>
                                            <div class="media">
                                                <div class="media-body">
                                                    <span class="media-meta pull-right">
                                                        <button type="button" class="btn btn-danger btn-sm">x</button>
                                                    </span>
                                                    <h4 class="title">
                                                        api/{{path}}
                                                        <span class="pull-right {{method}}">{{method}}</span>
                                                    </h4>
                                                    <p style="margin-bottom: 0px;">{{description}}</p>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                    <!-- /api endpoint -->
                                    {{/each}}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="content-footer">
                    <p>
                        APIStruct
                        <br> Developed by
                        <a href="https://github.com/x0uter" target="_blank">x0uter</a>
                    </p>
                </div>
            </div>
        </section>

    </div>
</div>